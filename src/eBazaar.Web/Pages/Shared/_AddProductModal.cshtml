@model eBazaar.Api.Models.Product

<dialog id="AddProduct_modal" class="modal">
    <div class="modal-box w-auto max-w-2xl bg-custom-lightest p-8 rounded-lg shadow-lg">
        <form method="post" id="addProductForm" class="space-y-6" asp-page-handler="AddProduct">

            <!-- Header -->
            <div class="flex justify-between items-center">
                <h3 class="text-4xl font-bold text-base-content">Add New Product</h3>
                <button type="button" class="btn btn-lg btn-circle btn-ghost" onclick="closeAddProductModal()">✕</button>
            </div>

            <p class="text-sm text-base-content/70 text-custom-gray">Add the details for your new product below.</p>

            <!-- Row 1: Name + Price -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="form-control">
                    <label class="label" for="Name">
                        <span class="label-text text-custom-dark">Product Name</span>
                    </label>
                    <input type="text" id="Name" name="Name" class="input input-bordered w-full" required />
                    <span class="text-error text-sm" data-valmsg-for="Name"></span>
                </div>

                <div class="form-control">
                    <label class="label" for="Price">
                        <span class="label-text text-custom-dark">Price ($)</span>
                    </label>
                    <input type="number" id="Price" name="Price" class="input input-bordered w-full" required step="0.01" min="0" />
                    <span class="text-error text-sm" data-valmsg-for="Price"></span>
                </div>
            </div>

            <!-- Row 2: Stock + Discount -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="form-control">
                    <label class="label" for="StockQuantity">
                        <span class="label-text text-custom-dark">Stock Quantity</span>
                    </label>
                    <input type="number" id="StockQuantity" name="StockQuantity" class="input input-bordered w-full" required min="0" />
                    <span class="text-error text-sm" data-valmsg-for="StockQuantity"></span>
                </div>

                <div class="form-control">
                    <label class="label" for="DiscountPercentage">
                        <span class="label-text text-custom-dark">Discount (%)</span>
                    </label>
                    <input type="number" id="DiscountPercentage" name="DiscountPercentage" class="input input-bordered w-full" min="0" max="100" step="1" />
                    <span class="text-error text-sm" data-valmsg-for="DiscountPercentage"></span>
                </div>
            </div>

            <!-- Row 3: Discount Dates -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="form-control">
                    <label class="label" for="DiscountStart">
                        <span class="label-text text-custom-dark">Discount Start Date</span>
                    </label>
                    <input type="date" id="DiscountStart" name="DiscountStart" class="input input-bordered w-full" />
                    <span class="text-error text-sm" data-valmsg-for="DiscountStart"></span>
                </div>

                <div class="form-control">
                    <label class="label" for="DiscountEnd">
                        <span class="label-text text-custom-dark">Discount End Date</span>
                    </label>
                    <input type="date" id="DiscountEnd" name="DiscountEnd" class="input input-bordered w-full" />
                    <span class="text-error text-sm" data-valmsg-for="DiscountEnd"></span>
                </div>
            </div>

            <!-- Row 4: Description -->
            <div class="form-control">
                <label class="label" for="Description">
                    <span class="label-text text-custom-dark">Description</span>
                </label>
                <textarea id="Description" name="Description" class="textarea textarea-bordered h-24 w-full" required></textarea>
                <span class="text-error text-sm" data-valmsg-for="Description"></span>
            </div>

            <!-- Modal Actions -->
            <div class="modal-action">
                <button type="submit" class="btn btn-primary bg-custom-blue w-full">Add Product</button>
            </div>
        </form>
    </div>
</dialog>

<script>
    function closeAddProductModal() {
        document.getElementById('AddProduct_modal').close();
    }
</script> 