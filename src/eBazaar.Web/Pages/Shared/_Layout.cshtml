<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eBazaar.Web</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col">
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur shadow-sm px-5 w-full">
        <nav class="container mb-4 mx-auto px-5 py-3 max-w-7xl">
            <div class="flex justify-between items-center">
                <a class="text-3xl font-bold text-blue-600" asp-area="" asp-page="/Index">🛒 E-Bazaar</a>
                <div class="flex space-x-4 text-xl font-semibold">
                    <a class="text-gray-600 hover:text-blue-600" asp-page="/Home">Home</a>
                    <a class="text-gray-600 hover:text-blue-600" asp-page="/Products/Index">All Products</a>
                    <button class="btn btn-ghost btn-sm text-custom-dark hover:text-blue-600 flex items-center gap-2 font-semibold" onclick="openCart()">
                        <i class="fa-solid fa-cart-shopping fa-xl"></i>
                        <span class="badge badge-sm badge-dash text-custom-blue" id="cartItemCount">0</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>


    <main class="container mx-auto px-4 py-8 flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-custom-light text-custom-dark w-full">
        <div class="container mx-auto py-3">
            <div class="text-center">
                Copyright &copy 2025 - All right reserved by E-Bazaar - <a class="text-custom-blue" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>