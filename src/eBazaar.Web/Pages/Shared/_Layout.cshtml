<!DOCTYPE html>
<html lang="en" data-theme="ebazaar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eBazaar.Web</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <a class="text-2xl font-bold text-blue-600" asp-area="" asp-page="/Index">🛒 E-Bazaar</a>
                <div class="flex space-x-4">
                    <a class="text-gray-600 hover:text-blue-600" asp-page="/Index">Home</a>
                    <a class="text-gray-600 hover:text-blue-600" asp-page="/Products/Index">Products</a>
                    <a class="text-gray-600 hover:text-blue-600" href="#" onclick="navigateToCart(event)">Cart</a>
                </div>
            </div>
        </nav>
    </header>


    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-white mt-auto">
        <div class="container mx-auto px-4 py-6">
            <div class="text-center">
                &copy; 2025 - eBazaar - <a class="text-blue-400 hover:text-blue-300" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>